{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Datahub App",
			"type": "python",
			"request": "launch",
			"module": "flask",
			"env": {
				"FLASK_APP": "${workspaceFolder}/app/src/app.py",
				"FLASK_ENV": "development",
				"FLASK_DEBUG": "1"
			},
			"args": [
				"run",
				"--port",
				"2070",
				"--host",
				"0.0.0.0"
				//"--no-debugger",
				//"--no-reload"
			],
			"jinja": true,
			"justMyCode": true
		},
		{
			"name": "Python: Run all Unit Tests",
			"type": "python",
			"request": "launch",
			"module": "unittest",
			"cwd": "${workspaceFolder}/app",
			"args": [
				"discover",
				"-s",
				"test",
				"-vv"
			],
			"justMyCode": true
		},
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": true
		}
	]
}
