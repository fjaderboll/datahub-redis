	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Datahub Web - Development",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm start",
			"cwd": "${workspaceFolder}/web",
		},
		{
			"name": "Datahub App - Development",
			"type": "debugpy",
			"request": "launch",
			"module": "flask",
			"env": {
				"FLASK_APP": "${workspaceFolder}/app/src/app.py",
				"FLASK_ENV": "development",
				"FLASK_DEBUG": "1"
			},
			"args": [
				"run",
				"--port",
				"2070",
				"--host",
				"0.0.0.0"
				//"--no-debugger",
				//"--no-reload"
			],
			"jinja": true,
			"justMyCode": true
		},
		{
			"name": "Datahub App - Production",
			"type": "python",
			"request": "launch",
			"module": "gunicorn",
			"cwd": "${workspaceFolder}/app/src",
			"env": {
				"GEVENT_SUPPORT": "True",
			},
			"args": [
				"--workers",
				"4",
				"--bind",
				"0.0.0.0:2070",
				"-k",
				"gevent",
				"wsgi:app"
			],
			"jinja": true,
			"justMyCode": true
		},
		{
			"name": "Docker - Redis",
			"command": "docker run -it --rm --name datahub-redis -p 6379:6379 -v datahub-redis-data:/data redislabs/redistimeseries:1.10.11",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Docker - EMQX",
			"command": "docker run -it --rm --name datahub-emqx -p 18083:18083 -p 1883:1883 -v ${workspaceFolder}/docker/cluster.hocon.local:/opt/emqx/data/configs/cluster.hocon -e 'EMQX_dashboard__default_username=admin' -e 'EMQX_dashboard__default_password=admin123' emqx:5.5.0",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Run all Unit Tests",
			"type": "python",
			"request": "launch",
			"module": "unittest",
			"cwd": "${workspaceFolder}/app",
			"args": [
				"discover",
				"-s",
				"test",
				"-vv"
			],
			"justMyCode": true
		},
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": true
		}
	]
}
